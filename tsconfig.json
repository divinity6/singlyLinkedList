{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "declaration": false,
    "isolatedModules": false,
    "allowJs": true,

    "resolveJsonModule": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "decorators",
      "dom",
      "es5",
      "scripthost",
      "es2015.iterable"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}